<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mor"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:layout_margin="0dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="211dp"
                android:padding="20dp"
                android:src="@drawable/ic_user" />


        </LinearLayout>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign In(Le Hoang Long)"
        android:textSize="30dp"
        android:textColor="@color/textcolor"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="300dp"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="350dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/tx1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_email"
                android:hint="Email"
                android:textStyle="italic"
                android:theme="@style/EditText" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#E5E5E5"
                android:layout_marginTop="15dp"
                ></View>
        </LinearLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="430dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">
            <EditText
                android:theme="@style/EditText"
                android:textColor="#fff"
                android:drawableStart="@drawable/ic_lock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pass"
                android:textStyle="italic"
                android:id="@+id/tx2"
                android:inputType="textPassword"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="#E5E5E5"
                android:layout_marginTop="15dp"
                ></View>
        </LinearLayout>

    </RelativeLayout>
    <Button
        android:id="@+id/btSign"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="530dp"
        android:background="@drawable/bg_button"
        android:textColor="#fff"
        android:text="Sign In"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="30dp"
        />

    <Button
        android:id="@+id/btEmail"

        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="600dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bg_button"
        android:text="Email"
        android:textColor="#fff"

        />
    <Button
        android:id="@+id/btFaceboock"

        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="600dp"
        android:layout_marginRight="30dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/bg_button"
        android:text="FaceBoock"
        android:textColor="#fff"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot password In"
        android:textSize="15dp"
        android:textColor="@color/textcolor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="660dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't have account?Sign Up now"
        android:textSize="15dp"
        android:textColor="@color/textcolor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="680dp"
        />
</RelativeLayout>